<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/slimespooky"
            android:text="BIENVENID@ AL HOTEL"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/inria_sans"
            android:text="Prepárate para una noche verdaderamente inolvidable en este espeluznante hotel, perfecto para los amantes de Halloween.  ¡Ven si quieres pasar miedo y un buen rato a la vez!"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:background="#9C27B0"
            android:text="RESERVAR UNA HABITACIÓN"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/bHab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#673AB7"
            android:text="VER TODAS LAS HABITACIONES"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/bOcio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#369C27B0"
            android:textColor="#52FFFFFF"
            android:text="ACTIVIDADES DE OCIO (PRÓXIMAMENTE)"
            android:textStyle="bold|italic" />
    </LinearLayout>
</FrameLayout>