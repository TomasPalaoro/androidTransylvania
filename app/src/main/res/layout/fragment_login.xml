<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoandroid"
    tools:context=".fragments.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="80dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/slimespooky"
            android:gravity="center_vertical"
            android:text="HOTEL TRANSYLVANIA"
            android:textColor="@color/white"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/inria_sans"
                android:hint="E-mail"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/inria_sans"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColorHint="@color/white" />

            <Switch
                android:id="@+id/switchRecordar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:checked="false"
                android:fontFamily="@font/inria_sans"
                android:minHeight="48dp"
                android:text="Recordarme"
                android:thumbTint="#C2A0FF"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/mensaje"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:fontFamily="@font/inria_sans"
                android:textAlignment="center"
                tools:text="Mensaje de aviso" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/boton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:fontFamily="@font/slimespooky"
                android:backgroundTint="@color/purple_700"
                android:text="ENTRAR"
                android:textSize="20sp" />

            <Button
                android:id="@+id/registrarme"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="#199C27B0"
                android:fontFamily="@font/inria_sans"
                android:text="¿No tienes cuenta? Registrate aquí" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>